<div class="main user-show">
  <div class="container">

    <div class="user">
      <span class="user-img">
        <% if @user.image_name? %>
          <%= image_tag @user.image_name.url %>
        <% else %>
          <%= image_tag "default_icon.jpeg" %>
        <% end %>
      </span>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if current_user?(@user) %>
        <%= link_to "編集", edit_user_path(@user) %>
      <% end %>
    </div>

    <%# 投稿内容 %>
    <% if @user.posts.any? %>
      <h3>投稿 (<%= @user.posts.count %>)</h3>
      <ol class="posts-index-item">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>


    <%# いいねした投稿 %>

  </div>
</div>
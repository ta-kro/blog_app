<div class="main user-show">
  <div class="container">

    <div class="user">
      <span class="user-img">
        <% if @user.image_name? %>
          <%= image_tag @user.image_name.url %>
        <% else %>
          <%= image_tag "default_icon.jpeg" %>
        <% end %>
      </span>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to "編集", edit_user_path(@user) %>
        <%= link_to "削除", user_path(@user), method: :delete, data: {confirm: "アカウントを削除しますか？"} %>
      <% end %>
    </div>

    <%# 以下投稿内容、いいねした投稿を並べたview %>

  </div>
</div>
<h1>パスワード再設定</h1>

<div class="">
  <div class="">
    <%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
      <%= render 'layouts/error_messages' %>

      <%= hidden_field_tag :email, @user.email %>

      <%= f.label :password %>
      <%= f.password_field :password, "パスワード" %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, "確認用パスワード" %>

      <%= f.submit "更新" %>
    <% end %>
  </div>
</div>